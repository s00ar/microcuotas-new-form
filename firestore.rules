rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function requesterDocPath() {
      return request.auth != null
        ? /databases/$(database)/documents/users/$(request.auth.uid)
        : null;
    }

    function requesterExists() {
      return requesterDocPath() != null && exists(requesterDocPath());
    }

    function requesterRole() {
      return requesterExists() ? get(requesterDocPath()).data.role : null;
    }

    function isAdmin() {
      return request.auth != null && requesterRole() == "admin";
    }

    function isReportUser() {
      return request.auth != null &&
        (requesterRole() == "admin" || requesterRole() == "report");
    }

    match /clientes/{document} {
      allow get, list: if request.auth != null;
      allow delete: if isAdmin();
      allow create: if isValidSolicitud();
      allow update: if false;

      function isValidSolicitud() {
        return request.resource.data.keys().hasAll(["cuil", "estado", "timestamp"]) &&
          request.resource.data.cuil is string &&
          request.resource.data.cuil.matches("^[0-9]{11,}$") &&
          request.resource.data.estado in ["aceptada", "rechazada"];
      }
    }

    match /users/{documentId} {
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
